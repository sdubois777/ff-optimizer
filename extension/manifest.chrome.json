{
  "manifest_version": 3,
  "name": "Draft Sync â†’ Optimizer",
  "version": "0.1.0",
  "description": "Reads Yahoo draft room and pushes events to your optimizer backend.",
  "permissions": ["scripting"],
  "host_permissions": [
    "https://football.fantasysports.yahoo.com/*",
    "http://127.0.0.1:5001/*"
  ],
  "background": { "service_worker": "sw.js" },
  "content_scripts": [
    {
      "matches": [
        "https://football.fantasysports.yahoo.com/*/draftclient*",
        "https://football.fantasysports.yahoo.com/*/draft*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
